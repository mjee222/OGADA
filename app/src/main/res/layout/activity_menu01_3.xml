<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_04"
    tools:context=".menu01Activity">

    <TextView
        android:id="@+id/menu01_3_text01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:background="@color/color_01"
        android:text="따라서 작성하세요!"
        android:textSize="30dp"
        android:textColor="@color/color_03"
        android:textStyle="bold"/>

    <!--입국서 이미지 출력할 이미지뷰-->
    <ImageView
        android:id="@+id/menu01_3_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu01_3_text01"
        android:layout_above="@+id/menu01_3_bottom_layout"
        android:background="@color/color_02"
        android:padding="8dp"
        android:layout_margin="10dp"/>

    <!--취소, 저장 버튼-->
    <Button
        android:id="@+id/menu01_3_backbtn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="취소"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_01"
        android:textColor="@color/color_03"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/menu01_3_savebtn"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="저장"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_01"
        android:textColor="@color/color_03"
        android:textSize="20dp"/>

    <!--진행률-->
    <LinearLayout
        android:id="@+id/menu01_3_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_dot"
            android:background="@android:color/transparent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_dot"
            android:background="@android:color/transparent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yes_dot"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</RelativeLayout>