<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context=".menu01ListItem"
    android:background="@color/color_01"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/menu01_item_flag"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/flag_korea"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/menu01_item_flag"
        android:orientation="vertical">

        <!-- 나라 이름 -->
        <TextView
            android:id="@+id/menu01_item_namekor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="대한민국"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/color_03"/>

        <!-- 영문 이름 -->
        <TextView
            android:id="@+id/menu01_item_nameeng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Korea"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/color_03"/>

    </LinearLayout>


</RelativeLayout>